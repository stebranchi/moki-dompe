<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Moki</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>DirectAccessFilter</filter-name>
    <filter-class>eu.fbk.ict.pdi.moki.filters.DirectAccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DirectAccessFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>IndexFilter</filter-name>
    <filter-class>eu.fbk.ict.pdi.moki.filters.IndexFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>IndexFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>RequestFilter</filter-name>
    <filter-class>eu.fbk.ict.pdi.moki.filters.RequestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RequestFilter</filter-name>
    <url-pattern>/RequestManager</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>
             eu.fbk.ict.pdi.moki.interfaces.FilterData
    </listener-class>
  </listener>
</web-app>